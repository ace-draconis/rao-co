<section class="swag text-center" style="background-image:url('{{ page.media[page.header.img].url }}')">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h1>{{ page.title }}</h1>
        <a href="#{{ page.header.id }}" class="down-arrow-btn"><i class="fa fa-chevron-down"></i></a>
      </div>
    </div>
  </div>
</section>
<section class="text-center" id="areas_of_practice">
  <div class="container-fluid nopadding responsive-services">
    <div class="wrapper">
      <div class="iphone">
        <div class="wp3"></div>
      </div>
      <div class="fluid-white"></div>
    </div>
    <div class="container designs my-3">
      <div class="row">
        <div class="col-md-5 col-md-offset-7">
          <div id="servicesSlider">
            <ul class="slides">
              {% for slide in page.header.slides %}
              <li>
                <h1 class="arrow">{{ slide.title }}</h1>
                <ul class="item">
                  {% for item in slide.content %}
                  <li>{{ item }}</li>
                  {% endfor %}
                </ul>
                {% if slide.link_url or slide.link_text %}
                <p><a href="{{ slide.link_url }}" class="arrow-btn">{{ slide.link_text }} <i
                      class="fa fa-long-arrow-right"></i></a></p>
                {% endif %}
              </li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>